@model Backend5.Models.Hospital
@{
    ViewBag.Title = Model.Name;
}
<h2>Hospital @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>Phone</dt>
        <dd>@Model.Phone</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="Hospitals">Back to List</a>|
    <a asp-action="Edit" asp-controller="Hospitals" asp-route-id="@Model.Id">Edit</a>
</div>